

<center>

   <h1>Questions</h1>

</center>

 

<div class="container">

 

 

   <button class="btn btn-success" data-toggle="modal"

data-target="#myModalAdd" id="addquestion">Add New</button>

   <table class="table table-striped" id="mytable">

     <thead>

       <tr>

         <th>Question ID</th>

        <th>Question Description</th>

       </tr>

     </thead>

     <tbody>

       {{#each question}}

       <tr>

         <td>{{ questionid }}</td>

         <td>{{ questiondescription }}</td>

         <td>

           <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-questionid="{{ questionid }}"

           data-questiondescription="{{ questiondescription }}">Edit</a>

           <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-questionid="{{ questionid }}">Delete</a>

         </td>

       </tr>

       {{/each}}

     </tbody>

   </table>

</div>

 

<!-- Modal Add Question-->

<form action="/savequestion" method="post">

   <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog"

aria-labelledby="exampleModalLabel"

     aria-hidden="true">

     <div class="modal-dialog" role="document">

      <div class="modal-content">

         <div class="modal-header">

           <h5 class="modal-title" id="exampleModalLabel">Add New Question</h5>

           <button type="button" class="close" data-dismiss="modal"

aria-label="Close">

             <span aria-hidden="true">&times;</span>

           </button>

         </div>

         <div class="modal-body">

         

           <div class="form-group">

             <input type="text" name="questiondescription" class="form-control" placeholder="Question Description" required>

           </div>

         </div>

         <div class="modal-footer">

           <button type="button" class="btn btn-secondary"

data-dismiss="modal">Close</button>

           <button type="submit" class="btn btn-primary">Save</button>

         </div>

       </div>

     </div>

   </div>

</form>

 

 

 

 

 

<!-- Modal Update Question-->

<form action="/updatequestion" method="post">
  <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Question</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
         

          <div class="form-group">
            <input type="text" name="questiondescription" class="form-control questiondescription"
              placeholder="Question Description" required>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="questionid" class="id">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>
    </div>
  </div>
</form>

 

<!-- Modal Delete Question-->

<form id="add-row-form" action="/deletequestion" method="post">

   <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog"

aria-labelledby="myModalLabel"

     aria-hidden="true">

     <div class="modal-dialog">

       <div class="modal-content">

         <div class="modal-header">

           <h5 class="modal-title" id="myModalLabel">Delete Question</h5>

           <button type="button" class="close" data-dismiss="modal"

aria-label="Close"><span

aria-hidden="true">&times;</span></button>

         </div>

         <div class="modal-body">

           <strong>Are you sure to delete this question?</strong>

         </div>

         <div class="modal-footer">

           <input type="hidden" name="questionid" class="form-control id2" required>

           <button type="button" class="btn btn-default"

data-dismiss="modal">Close</button>

           <button type="submit" class="btn btn-success">Delete</button>

         </div>

       </div>

     </div>

   </div>

</form>

 

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<script>

   $(document).ready(function () {

 

     //showing data to edit modal

      $('#mytable').on('click','.edit',function(){
    var questionid = $(this).data('questionid');
    var questiondescription = $(this).data('questiondescription');
    $('#EditModal').modal('show');
    $('.id').val(questionid);
    $('.questiondescription').val(questiondescription);

 

   });

 

   //showing delete record modal

   $('#mytable').on('click', '.delete', function () {

     var questionid = $(this).data('questionid');

     $('#DeleteModal').modal('show');

     $('.id2').val(questionid);

   });

 

 

 

    //showing add record modal

   $('#container').on('click', '.save', function () {

     var questiondescription = $(this).data('questiondescription');

        $('#myModalAdd').modal('show');

         $('.questiondescription').val(questiondescription);

    });

 

   });

 

   $('#addquestion').on('click', function() {

        var questiondescription = $(this).data('questiondescription');

      $('#myModalAdd').modal('show');

      $('.questiondescription').val(questiondescription);

 

});

 

 

</script>